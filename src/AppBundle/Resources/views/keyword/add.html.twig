{% extends 'base.html.twig' %}

{% block head %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('assets/css/select.min.css') }}" rel="stylesheet" type="text/css"/>
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}

{% block body %}
    <div class="row">
        <form method="POST" action="{{ path('keyword-post-add') }}">
            <div class="form-group">
                <label for="">Keyword</label>
                <input type="text" name="keyword" required class="form-control" id="" aria-describedby="keywordHelp"
                       placeholder="Enter keyword">
                <small id="keywordHelp" class="form-text text-muted">Enter you want to keyword</small>
            </div>
            <div class="form-group">
                <label for="">Select Language</label>
                <select class="form-control" name="language" id="" required>
                    <option value="en">Engilish</option>
                    <option value="tr">Turkish</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleSelect1">Select Count</label>
                <select class="form-control" name="count" id="" required>
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                    <option value="250">250</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>



{% endblock %}


{% block extraJS %}
    <script src="{{ asset('assets/js/select2.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('select').select2();
            alert(8);
        })
    </script>

{% endblock %}