{% extends 'base.html.twig' %}

{% block head %}
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="{{ asset('assets/css/select2.css') }}" rel="stylesheet" type="text/css"/>
    <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}

{% block body %}
    <div class="row">
        <form method="POST" action="{{ path('keyword-post-edit', {keywordId: keyword.keywordId}) }}">
            <div class="form-group">
                <label for="">Keyword</label>
                <input type="text" name="keyword" value="{{ keyword.name }}" required class="form-control" id="" aria-describedby="keywordHelp"
                       placeholder="Enter keyword">
                <small id="keywordHelp" class="form-text text-muted">Enter you want to keyword</small>
            </div>
            <div class="form-group">
                <label for="">Select Language</label>
                <select class="form-control" name="language" id="" required>
                    <option {{ (keyword.language == 'en') ? 'selected' : '' }} value="en">English</option>
                    <option {{ (keyword.language == 'tr') ? 'selected' : '' }} value="tr">Turkish</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleSelect1">Select Count</label>
                <select class="form-control" name="count" id="" required>
                    <option {{ (keyword.count == '10') ? 'selected' : '' }} value="10">10</option>
                    <option {{ (keyword.count == '20') ? 'selected' : '' }} value="20">20</option>
                    <option {{ (keyword.count == '50') ? 'selected' : '' }} value="50">50</option>
                    <option {{ (keyword.count == '100') ? 'selected' : '' }} value="100">100</option>
                    <option {{ (keyword.count == '250') ? 'selected' : '' }} value="250">250</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>



{% endblock %}


{% block extraJS %}
    <script src="{{ asset('assets/js/select2.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('select').select2();
        });
    </script>

{% endblock %}